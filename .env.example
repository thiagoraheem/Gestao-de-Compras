# Database Configuration
DATABASE_URL=your_postgresql_url_here
DATABASE_URL_DEV=your_development_postgresql_url_here

# Session Security
SESSION_SECRET=your_super_secure_session_secret_here_minimum_32_characters

# Application Configuration
# The base URL for the application (used in email links)
# For production, this should be your domain (e.g., https://yourdomain.com)
# For Replit, this is automatically set using REPLIT_DOMAINS
BASE_URL=http://localhost:5000

# External API Configuration
# Base URL for the Products API
BASE_API_URL=http://54.232.194.197:5001/api/Produtos

# ERP Integration
# Set to "true" to enable real ERP integration, "false" to use mock data
ERP_INTEGRATION_ENABLED=false

# Email Configuration (SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
FROM_EMAIL=sistema@your-company.com

# Email Sending Control
# Set to false to disable email sending in test environments
ENABLE_EMAIL_SENDING=true

# Optional: If you want to override the auto-detected base URL
# FRONTEND_URL=https://your-custom-domain.com

# Logging Configuration
# LOG_LEVEL: Controls the minimum log level (error, warn, info, debug)
# In production, defaults to 'error', in development defaults to 'info'
LOG_LEVEL=info

# ENABLE_REQUEST_LOGS: Enable/disable HTTP request logging (true/false)
# Set to 'false' to completely disable request logs
ENABLE_REQUEST_LOGS=true

# LOG_VERBOSE: Enable verbose logging mode (true/false)
# When true, includes response bodies and additional details
# Recommended: false in production, true in development for debugging
LOG_VERBOSE=false

# Example production settings for minimal logging:
# LOG_LEVEL=error
# ENABLE_REQUEST_LOGS=true
# LOG_VERBOSE=false

# Development note:
# In Replit, BASE_URL is automatically configured using REPLIT_DOMAINS
# In production, set BASE_URL to your actual domain